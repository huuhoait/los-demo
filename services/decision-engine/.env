# Decision Engine Service Configuration

# Environment
ENVIRONMENT=development

# Server Configuration
PORT=8082
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=60s

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/decision_engine?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# Logging Configuration
LOG_LEVEL=info

# Credit Bureau Configuration (if needed)
CREDIT_BUREAU_API_URL=https://api.creditbureau.com
CREDIT_BUREAU_API_KEY=your_api_key_here
CREDIT_BUREAU_TIMEOUT=30s
